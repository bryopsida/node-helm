{
  "name": "node-helm",
  "version": "0.1.0",
  "description": "Node.JS bindings for helm",
  "main": "dist/lib.js",
  "scripts": {
    "test": "jest --coverage",
    "lint": "eslint --ext .ts src/ && prettier --check .",
    "lint:fix": "eslint --ext .ts src/ --fix && prettier --write .",
    "build": "npx tsc --project ./",
    "clean": "rm -fr build",
    "prepare": "npm run build",
    "build:docs": "typedoc src/lib.ts",
    "postinstall": "node ./scripts/fetchHelmBinary.js"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "tar-fs": "^3.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^30.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.28.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
